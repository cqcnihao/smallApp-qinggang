
/*轮播图区域样式*/
.carousel-item{
  width: 100%;
  height: 400rpx;
}
.swiper {
  height: 400rpx;
  width: 100%;
}
.swiper image {
  height: 100%;
  width: 100%;
}
/* 布局分区域 */
.regional-treatment{
  width: 100%;
  height: 300rpx;
}
.date-house{
  height: 200rpx;
  background-color: green;
}
/* 表格样式 */
.table {
  border: 0px solid darkgray;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 3rem;
  align-items: center;
}
.td {
  color: 	#696969;
    width:40%;
    justify-content: center;
    text-align: center;
}
.bg-w{
  background: snow;
  border-bottom: 2rpx solid #DCDCDC;
}
.bg-g{
  background: #FFFFFF;
  border-bottom: 2rpx solid #DCDCDC;
  font-size: 40rpx;
}
.bg-z{
  background: #FFFFFF;
  
}
.th {
  width: 50%;
  justify-content: center;
  background: #FFFFFF;
  color: 	#696969;
  display: flex;
  height: 3rem;
  align-items: center;
  font-size: 30rpx;
 
}
