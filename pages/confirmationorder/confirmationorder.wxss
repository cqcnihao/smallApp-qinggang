#orderContainer {
  font-size: 24rpx;
  line-height: 50rpx;
}

#orderContainer input {
  text-align: right;
  width: 400rpx;
}

.placeholderClass {
  font-size: 24rpx;
  text-align: right;
}
.content {
  margin-left: 35rpx;
  margin-right: 35rpx;
}

.orderInfoFirst, .orderInfoSecond, .orderInfoThird, .orderInfoFourth, .orderInfoFifth, .orderInfoSixth {
  border-bottom: 2rpx solid #DCDCDC;
}
.orderInfoFirst .content {
  display: flex;
  padding-top: 35rpx;
  padding-bottom: 35rpx;
}

.orderInfoFirst text {
  display: block;
}
.orderImg {
  width: 150rpx;
  height: 150rpx;
  border-radius: 10rpx;
  margin-right: 35rpx;
}

.houseDetail {
  color: #999;
}
.aboutTime {
  border-bottom: 2rpx solid #DCDCDC;
  padding-bottom: 35rpx;
}

.checkTime {
  display: flex;
  justify-content: space-between;
}

.houseCount {
  display: flex;
  justify-content: space-between;
  border-bottom: 2rpx solid #DCDCDC;
  line-height: 70rpx;
}

.orderInfoFifth .content {
  display: flex;
  justify-content: space-between;
}

#contactPerson, .clientName {
  border-bottom: 2rpx solid #DCDCDC;
}

.orderInfoSixth text {
  display: block;
}

.orderInfoFinal {
  position: fixed;
  bottom: 0;
  border-top: 2rpx solid #DCDCDC;
  width: 100%;
  height: 100rpx;
  z-index: 99;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}

button {
  display: inline-block;
  color: #fff;
  background-color: #008000;
  font-size: 35rpx;
  width: 300rpx;
  height: 50rpx;
  line-height: 50rpx;
  margin-left: 40rpx;
  margin-right: 40rpx; 
}

.payMent {
  margin-left: 50rpx;
  font-size: 30rpx;
}

.money {
  font-size: 40rpx;
  font-weight: 600;
}

.input-text {
  display: flex;
  justify-content: space-between;
}