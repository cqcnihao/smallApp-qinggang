.wrapper {
  margin: 0 25rpx;
}

textarea {
  box-sizing: border-box;
  border: 2rpx solid #DCDCDC;
  width: 100%;
  height: 300rpx;
  margin: 30rpx 0;
  padding: 10rpx 10rpx;
  font-size: 28rpx;
}

.placeholderClass {
  font-size: 26rpx;
}

.suggestTitle {
  display: block;
  font-size: 30rpx;
  margin: 30rpx 0;
}

input {
  border: 2rpx solid #DCDCDC;
  margin-bottom: 20rpx;
  padding: 0 10rpx; 
  font-size: 28rpx;
  height: 70rpx;
}

.remarkText {
  font-size: 26rpx;
}

.wrapper button {
  font-size: 30rpx;
  margin-top: 30rpx;
  background-color: #71C671;
  height: 92rpx;
  line-height: 92rpx;
}